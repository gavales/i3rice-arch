#!/usr/bin/env bash

status=$(mpc current)

icon="%{T1}ï€%{T-}"

playing=$(ncmpcpp -q --current-song '%20a > %30t')
white=$(xrdb -query | grep '*color7' | awk '{print $NF}')
clr=$(xrdb -query | grep '*color7' | awk '{print $NF}')

if [[ -z "$status" ]]; then
	echo "${icon} ${playing}"
else
	echo "${icon} ${playing}"
fi

